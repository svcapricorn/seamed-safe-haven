generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model InventoryItem {
  id            String   @id @default(uuid())
  nickname      String?
  name          String
  chemicalName  String?
  brand         String?
  
  // Categorization
  category      String
  vessel        String?
  
  // Medical Details
  strength      String?
  unitType      String?
  unitSize      String?
  container     String?
  scriptName    String?
  
  // Quantities
  quantity      Int
  remaining     String?
  dosesLeft     Int?
  minQuantity   Int
  
  // Logistics
  expirationDate DateTime?
  location       String
  barcode        String?
  
  // Media & Meta
  photos         String // SQLite limitation: Stored as JSON string
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  // Ownership (from Okta user ID)
  userId         String
  user           User     @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id // matches Okta ID
  email     String   @unique
  firstName String?
  lastName  String?
  
  items     InventoryItem[]
  settings  AppSettings?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AppSettings {
  id                    String   @id @default(uuid())
  user                  User     @relation(fields: [userId], references: [id])
  userId                String   @unique
  
  vesselName            String?
  lowStockThreshold     Int      @default(25)
  expirationWarningDays String   // SQLite limitation: Stored as JSON string
  theme                 String   @default("system")
  userRole              String   @default("captain")
  subscriptionTier      String   @default("free")
}
