generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model InventoryItem {
  id            String   @id @default(uuid())
  nickname      String?
  name          String
  chemicalName  String?
  brand         String?
  
  // Categorization
  category      String
  vessel        String?
  
  // Medical Details
  strength      String?
  unitType      String?
  unitSize      String?
  container     String?
  scriptName    String?
  
  // Quantities
  quantity      Int
  remaining     String?
  dosesLeft     Int?
  minQuantity   Int
  
  // Logistics
  expirationDate DateTime?
  location       String
  barcode        String?
  
  // Media & Meta
  photos         String[]
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  // Ownership (from Okta user ID)
  userId         String
}
